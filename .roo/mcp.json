{
  "mcpServers": {
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=/home/swirky/DevHub/repos/OnboardingAudit.ai/,dst=/projects",
        "mcp/filesystem",
        "/projects"
      ]
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "/home/swirky/DevHub/repos/OnboardingAudit.ai/.eslintrc.cjs"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--browser=",
        "--headless=",
        "--viewport-size="
      ]
    },
    "sqlite": {
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "/home/you/DevHub/OnboardingAudit.ai/dev.db"
      ]
    }
  }
}