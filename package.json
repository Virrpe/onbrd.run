{
  "name": "onboarding-audit-ai",
  "version": "1.0.0",
  "description": "Onboarding intelligence with pulse checks and benchmarking",
  "private": true,
  "workspaces": [
    "extension",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev": "pnpm run --filter extension dev",
    "build": "pnpm --filter @onboarding-audit/extension run build || pnpm -C extension run build",
    "test": "vitest",
    "test:unit": "vitest -w=false",
    "test:fixtures": "tsx tests/puppeteer/fixtures.spec.ts",
    "test:local": "pnpm -w run build && pnpm -w run test:unit && pnpm -w run test:fixtures",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:chromium": "playwright test --project=chromium",
    "lint": "eslint . --ext .ts,.js,.svelte",
    "format": "prettier --write .",
    "pack": "tsx scripts/pack.ts",
    "verify": "tsx scripts/verify.ts",
    "validate:batch": "tsx tests/validation/run-batch.ts",
    "validate:summarize": "tsx tests/validation/summarize.ts",
    "validate:all": "pnpm -w run build && pnpm -w run validate:batch && pnpm -w run validate:summarize",
    "type-check": "tsc --noEmit",
    "release": "pnpm -w run build && pnpm -w run validate:all && pnpm -w run pack",
    "lhci": "lhci autorun --config=lighthouserc.json"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@playwright/test": "^1.55.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-plugin-svelte": "^2.35.0",
    "geist": "^1.5.1",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "puppeteer": "^21.5.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
